	Only installed pack is: @iconify-json/mdi
*/
const socialLinks: {
	friendlyName: string;
	isWebmention?: boolean;
	link: string;
	name: string;
}[] = [
	{
		friendlyName: "Github",
		link: "https://github.com/maksymilan",
		name: "mdi:github",
	},
	// {
	// 	friendlyName: "Twitter",
	// 	link: "https://x.com/dou_hu72607",
	// 	name: "mdi:twitter",
	// },
	// {
